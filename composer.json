{
    "name": "plexi/laracl",
    "description": "Gerenciador de listas de acesso (Access Control List) com CRUD's de configuração para usuários e grupos",
    "keywords": ["laravel","cruds","auth","acl","security","blade","helpers"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Pereira",
            "email": "rpdesignerfly@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": "~5.5",
        "plexi/old-extended": ">=1.1.0",
        "plexi/sortable-grid": ">=1.1.6",
        "doctrine/dbal": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Laracl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laracl\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laravel": {
            "providers": [
                "Laracl\\ServiceProvider"
            ],
            "aliases": {
                "Laracl": "Laracl\\Facade"
            }
        }
    },
    "require-dev": {
        "illuminate/framework": "5.5.x"
    }
}
